<div class="card">
    <div class="card-body">
        <form action="/newUser" method="POST">
            <label for="email">E-mail:</label>
            <input type="email" name="email" id="email" placeholder="Insira seu e-mail" class="form-control">
            <label for="pass">Senha:</label>
            <input type="password" name="pass" id="pass" placeholder="Insira sua senha" class="form-control">
            <hr>
            <label for="CPF">CPF:</label>
            <input type="text" name="cpf" id="cpf" placeholder="Insira seu CPF" class="form-control">
            <label for="departamento">Departamento</label>
            <input type="text" name="departamento" id="departamento" placeholder="Insira seu departamento" class="form-control">
            <label for="cargo">Cargo:</label>
            <input type="text" name="cargo" id="cargo" placeholder="Insira seu cargo" class="form-control">
            <br>
            <button type="submit" class="btn btn-success">Criar</button>
        </form>
    </div>
</div>